{
"/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Homepage is accessible to all users",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/trending": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Trending page requires authentication",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/search": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Search page requires authentication", 
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/editor": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Editor requires authentication",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/editor/:id": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Editor with ID requires authentication",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/pen/:id": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Pen details require authentication",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Callback page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/prompt-password/:appId/:emailAddress/:provider": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Password prompt is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/reset-password/:appId/:fields": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Password reset is public",
            "rule": "public"
          }
        ]
      }
    }
  }
}